---
import "@fontsource-variable/inter";
import Propos from "~/components/propos.astro";
import Features from "~/components/features.astro";
import Footer2 from "~/components/footer4.astro";
import Header from "~/components/header.astro";
import Elrintro from "~/components/elrintro.astro";
import Beau from "~/components/plusbeau.astro";
import Portfolio from "~/components/portfolio.astro";
import Splash from "~/components/splash.astro";
import Contact from "~/components/contact2.astro";
import Cards from "~/components/cards.astro";
import Pricing from "~/components/Pricing.astro";
import About from "~/components/about.astro";
import Elrpropos from "~/components/elrpropos.astro";
import Elrsplash from "~/components/elrsplash.astro";
import { Picture } from "@astrojs/image/components";
import Aboutimg from "~/assets/about-image.svg";
import Faq from "~/components/elrfaq.astro";
import Map from "~/components/map.astro";
import Blogcontent from "~/components/blog-content.astro";



const widths = [450, 800]; // This represents the actual widths of the images
const sizes = "(min-width: 640px) 800px, 450px"; // This will select 800px width image when viewport is >= 640px and 450px width image otherwise.



import { getLangFromUrl } from '~/i18n/utils';
const lang = getLangFromUrl(Astro.url);

// import Booking from "~/components/squarebook.astro";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Apprenez à connaitre l'Agence ELR, l'agence en charge du développement des PMEs au Québec.";
---

<!doctype html>
<html lang={lang} class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <!-- Google Tag Manager -->
