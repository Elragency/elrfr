---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import astronautImageBig from "~/assets/mac-big.png";
import astronautImageSmall from "~/assets/mac-small.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";
import Backgroundimage from "~/assets/backgroundv3.png";
import astronautImage from "~/assets/me-iphone.png";

const widths = [450, 800]; // This represents the actual widths of the images
const sizes = "(min-width: 640px) 800px, 450px"; // This will select 800px width image when viewport is >= 640px and 450px width image otherwise.

---

<section class="relative h-full bg-black h-screen">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
      <!-- <HeroImage /> -->
  </div>

  <!-- Container for Agency text, Picture, and Button -->
  <div class="relative grid h-full place-items-center sm:grid-cols-1"> <!-- Ensure this container takes up the full height of its parent -->

      <!-- Background Text: ELR and Agency for mobile -->
      <div class="flex flex-col items-center justify-center z-10 space-y-4 sm:hidden h-screen" > <!-- sm:hidden ensures it's only shown on small screens -->
        <div class="gradient-text text-center font-extrabold tracking-tighter urmom-services text-8vw">Automatisations</div>
        <div class="gradient-text text-center font-extrabold tracking-tighter urmom-services text-20vw">Optimisations</div>
    </div>

      <!-- Background Text: Agency for larger screens -->
      <div class="smally background-text-elr2 gradient-text text-center font-extrabold tracking-tighter urmom absolute inset-0 flex items-center justify-center w-screen h-screen text-bbb z-0 big-hidden sm:flex sm:items-center">
        Automatisations Optimisations
    </div>

      <!-- Picture and Button -->
      <div class="flex flex-col items-center justify-center z-10 space-y-4 marginal sm:mt-0">

          <div class="background-text-container relative w-full sm:hidden" id="astronaut">
            <div
            id="astronaut"
            class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
          >
            <!-- <Picture
              class="h-full w-full object-cover"
              src={astronautImage}
              widths={widths}
              sizes={sizes}
              loading="eager"
              alt="A floating astronaut in a space suit"
            /> -->
          </div>

          </div>
      </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  .text-10vw !important {
    font-size: 5vw;
}

