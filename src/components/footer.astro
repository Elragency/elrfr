---

<footer class="fooot relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40 foot-black">
    <!-- <HeroImage /> -->
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>

  <ul class="footer-list">

    <li>
      <p class="footer-list-title has-before">Restez Connect√©</p>
    </li>

    <li>
      <form action="https://api.smtprelay.co/contact/add?version=2" method="post" id="ewf_subscriptionForm_QJDNywnAyx" class="EWF__form Inline footer-form">
          <div class="headers" style="display: none;">
              <h4 id="ewf_formheader" class="EWF__header" style="display: none;">
              </h4>
              <p id="ewf_formdesc">Enter specific and clear language on the intended use of the collected information.
              </p>
          </div>
          <input style="color: black !important;" type="email" name="email" aria-label="email" placeholder="Votre Courriel" required="" class="form-control input-field">
          <div class="webform-lists" style="display: none;">
              <div style="display:flex;" class="checkboxes js-Subscribe to newsletter">
                  <label class="container-box">
                      <input type="checkbox" name="publiclistid" id="FQkGOQny" value="cc3f17bf-ba53-4a46-a1a4-d9247663398c" checked="checked">
                  </label>
                  <label class="publiclistlabel" for="FQkGOQny">Restez au Courant
                  </label>
              </div>
          </div>
          <div class="consent">
          </div>
          <p id="ewf_datadisclaimer">
          </p>
          <input type="hidden" name="publicaccountid" value="84b21f2c-54ea-4b2b-ac58-763ffef4d7cc">
          <input type="hidden" name="returnUrl" value="">
          <input type="hidden" name="activationReturnUrl" value="">
          <input type="hidden" name="alreadyactiveurl" value="">
          <input type="hidden" name="activationTemplate" value="">
          <input type="hidden" name="source" value="WebForm">
          <input type="hidden" name="verifyemail" value="false" id="ewf_verifyEmails">
          <input type="hidden" id="ewf_captcha" name="captcha" value="false">
          <input type="hidden" name="sendActivation" value="false">
          <input type="hidden" name="notifyEmail" value="">
          <button type="submit" class="btn btn-primary EWF__subscribe" aria-label="Submit">
              <ion-icon name="chevron-forward-sharp" aria-hidden="true"></ion-icon>
          </button>
      </form>
  </li>
    
   

    <li>
      <ul class="social-list">

