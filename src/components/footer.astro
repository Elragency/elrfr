---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "/",
    description: "Agence ELR",
    icon: "mdi:home",
  },
  {
    url: "https://www.linkedin.com/in/edouard-l-458410137/",
    description: "Mon profil Linkedin",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://www.facebook.com/agenceelr",
    description: "Astro on Discord",
    icon: "fa-brands:facebook",
  },
  // {
  //   url: "https://twitter.com/astrodotbuild",
  //   description: "Astro on Twitter",
  //   icon: "fa-brands:twitter",
  // },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40 foot-black">
    <!-- <HeroImage /> -->
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>

  
</footer>


<style>
  .foot-black {
    background-color: black;
  }
</style>