---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import ContentSection from "~/components/ct-section3.astro";
import astronautImage from "~/assets/mountain.png";
import Bgimage2 from "~/components/bg-image.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---
<section class="relative h-full float-in-on-scroll">
  <div class="p-4 sm:p-8 absolute grid h-full place-items-center sm:grid-cols-2">
      <!-- Astronaut Image -->
      <div id="astronaut" class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start">
          <Picture
            class="h-full w-full object-cover"
            src={astronautImage}
            widths={widths}
            sizes={sizes}
            loading="eager"
            alt="A floating astronaut in a space suit"
          />
      </div>

      <!-- Content Section -->
      <ContentSection title="Voici ce que nous offrons" titleClass="text-4xl" id="intro" class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end" data-aos="fade-up">
          <Fragment slot="lead" class="float-in-on-scroll">
              Il est temps de faire passer votre entreprise a la vitesse superieur, c'est ce que nous vous offrons.
              <span class="text-primary">fast modern</span> website and <span class="text-primary">thrive online.</span>
              <div style="text-align: center;">
                  Professional, fast and <span class="text-primary">simple</span>
                  to be online in no time and reach new potential clients through a<span class="text-primary"> powerful</span> website.
              </div>

          </Fragment>

          <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
              <a href="#showcase" class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4">
                  <Icon pack="mdi" name="telescope" class="h-8" />
                  <span>Check our work</span>
              </a>
              <a href="#contact" class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4">
                  <Icon pack="mdi" name="rocket" class="h-8" />
                  <span>Act Now!</span>
              </a>
          </div>
      </ContentSection>
  </div>
</section>