---
import { languages } from '../i18n/ui';
import { getRouteFromUrl, useTranslatedPath } from '../i18n/utils';

const route = getRouteFromUrl(Astro.url);
const translatePath = useTranslatedPath(); // pass the language argument here if required

function getCurrentLanguageLabel(route, languages) {
  if (route) {
    const segments = route.split('/');
    const currentLanguage = segments[1] || 'FR'; // Set default to 'FR'
    return languages[currentLanguage] || 'Francais';
  }
  return 'Francais';
}

const currentLanguageLabel = getCurrentLanguageLabel(route, languages);

---

<div class="sl-nav">
    <ul class="language-list">
      <li class="language-item">
        <span><b>{currentLanguageLabel}</b> <i class="fa fa-angle-down" aria-hidden="true"></i></span>
        <ul class="dropdown">
          {Object.entries(languages).map(([lang, label]) => (
            <li class="dropdown-item">
              <a href={translatePath(`/${route ? route : ''}`, lang)}>{label}</a>
            </li>
          ))}
        </ul>
      </li>
    </ul>
  </div>
