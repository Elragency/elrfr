---
import { languages } from '../i18n/ui';
import { getRouteFromUrl, useTranslatedPath } from '../i18n/utils'; // Add the function import here
const route = getRouteFromUrl(Astro.url);
const translatePath = useTranslatedPath(/* pass the language argument here if required */);
---

<div class="sl-nav">
    <ul class="language-list">
      <li class="language-item">
        <span><b>FR</b> <i class="fa fa-angle-down" aria-hidden="true"></i></span>
        <ul class="dropdown">
          {Object.entries(languages).map(([lang, label]) => (
            <li class="dropdown-item"> <!-- add a class here -->
              <a href={translatePath(`/${route ? route : ''}`, lang)}>{label}</a>
            </li>
          ))}
        </ul>
      </li>
    </ul>
  </div>
  
