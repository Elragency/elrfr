---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'blog'>;
}

const { data, slug } = Astro.props.project;
---
<section class=" px-10">
	<div class="container">
	  <div class="-mx-4 flex flex-wrap">
		<a class="w-full px-4 md:w-1/2 lg:w-1/3" href={`/blogffs/${slug}`}>
			<div class="wow fadeInUp group mb-10" data-wow-delay=".1s">	
				<div class="mb-4 overflow-hidden rounded">
					<a href="/blog/post-1" class="block">
						<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" class="w-full transition group-hover:rotate-6 group-hover:scale-125" />
					</a>
				</div>
				<div>
					<span class="mb-5 inline-block rounded bg-primary py-1 px-4 text-center text-xs font-semibold leading-loose text-white">
					{data.publishDate}
					</span>
					<h3>
						<a href="/blog/post-1" class="mb-4 inline-block text-xl font-semibold text-dark hover:text-primary sm:text-2xl lg:text-xl xl:text-2xl">
						{data.title}
						</a>
					  </h3>
					  <p class="text-base text-body-color">
						{data.description}
					  </p>
				</div>
			</div>
		</a>
	  </div>
	</div>
</section>



